---
import Layout from '../layouts/Layout.astro';

const title = "Contact | Alex Power";
const description = "Get in touch with Alex Power for collaboration, consulting, or just to say hello.";
---

<Layout title={title} description={description}>
  <div class="container mx-auto px-4 md:px-8 py-16">
    <div class="max-w-3xl mx-auto">
      <h1 class="text-3xl md:text-4xl font-heading font-bold mb-6 text-midnight-900 dark:text-white">
        Get in Touch
      </h1>
      
      <p class="text-xl text-midnight-700 dark:text-midnight-300 mb-8">
        Have a project idea, question, or just want to say hello? I'd love to hear from you. Feel free to reach out through email or social media.
      </p>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Contact info -->
        <div class="bg-midnight-50 dark:bg-midnight-800/50 rounded-lg p-6 border border-midnight-100 dark:border-midnight-700">
          <h2 class="text-xl font-heading font-bold mb-4 text-midnight-900 dark:text-white">
            Contact Information
          </h2>
          
          <div class="space-y-4">
            <div class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-blue-400 dark:text-blue-300 mt-1 mr-3">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
              </svg>
              <div>
                <h3 class="text-sm font-medium text-midnight-900 dark:text-white">Email</h3>
                <a href="mailto:powera.dev@outlook.com" class="text-midnight-700 dark:text-midnight-300 hover:text-blue-400 dark:hover:text-blue-300">
                  powera.dev@outlook.com
                </a>
              </div>
            </div>
            
            <div class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-blue-400 dark:text-blue-300 mt-1 mr-3">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
              </svg>
              <div>
                <h3 class="text-sm font-medium text-midnight-900 dark:text-white">Location</h3>
                <p class="text-midnight-700 dark:text-midnight-300">
                  St. Petersburg, FL
                </p>
              </div>
            </div>
          </div>
        </div>
        
        <div class="bg-white dark:bg-midnight-800 rounded-lg p-6 border border-midnight-100 dark:border-midnight-700 shadow-md">
          <h2 class="text-xl font-heading font-bold mb-4 text-midnight-900 dark:text-white">
            Connect on Social
          </h2>
          
          <div class="space-y-4">
            <a 
              href="https://github.com/alex-power" 
              target="_blank" 
              rel="noopener noreferrer" 
              class="flex items-center p-3 rounded-md hover:bg-midnight-50 dark:hover:bg-midnight-700 transition-colors"
            >
              <div class="w-8 h-8 flex items-center justify-center mr-3 bg-midnight-100 dark:bg-midnight-700 rounded-full">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 24 24" class="text-midnight-800 dark:text-midnight-200">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </div>
              <span class="text-midnight-800 dark:text-midnight-200">GitHub</span>
            </a>
            
            <a 
              href="https://www.linkedin.com/in/alex-power-a8963291/" 
              target="_blank" 
              rel="noopener noreferrer" 
              class="flex items-center p-3 rounded-md hover:bg-midnight-50 dark:hover:bg-midnight-700 transition-colors"
            >
              <div class="w-8 h-8 flex items-center justify-center mr-3 bg-midnight-100 dark:bg-midnight-700 rounded-full">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 24 24" class="text-midnight-800 dark:text-midnight-200">
                  <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                </svg>
              </div>
              <span class="text-midnight-800 dark:text-midnight-200">LinkedIn</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>