---
import Layout from '../layouts/Layout.astro';

const title = "About | Alex Power";
const description = "Learn more about Alex Power, a Client Solutions Architect and Product Strategy Consultant with expertise in technology leadership, product strategy, and embedded finance solutions.";

const experiences = [
  {
    company: "Galatea Associates",
    role: "Associate - Team Lead",
    period: "6/2022 - Current",
    description: "Leading a high-performing team of 8 developers and architects delivering Embedded Finance and Banking-as-a-Service solutions. Currently consulting for a Global Systemically Important Bank (GSIB) on strategic transformation initiatives in their Embedded Finance division. Orchestrated the successful delivery of a $3.5mm consulting engagement, establishing architectural standards and best practices for embedded banking platforms. Pioneered innovative approaches to marketplace banking, enabling FDIC-insured accounts, payments, and KYC capabilities through strategic technology integration."
  },
  {
    company: "Galatea Associates",
    role: "Associate - Software Architect",
    period: "10/2020 - 6/2022",
    description: "Architected and delivered enterprise-scale solutions for embedded finance, leading a cross-organizational team of 100+ developers. Transformed client onboarding through innovative React.js UI development and automated KYC processes, reducing onboarding time to 2 minutes. Established architectural patterns and technical standards that accelerated development velocity and improved system reliability."
  },
  {
    company: "Galatea Associates",
    role: "Associate - Software Engineer",
    period: "1/2018 - 10/2020",
    description: "Engineered mission-critical investment reporting systems using Java Spring micro-services, serving hedge fund clients across thousands of holdings. Optimized system performance through innovative orchestration and data processing techniques, reducing report generation time by 83%. Implemented robust CI/CD pipelines and observability solutions that enhanced system reliability and developer productivity."
  },
  {
    company: "FIS Global",
    role: "Programmer Analyst I",
    period: "8/2015 - 1/2018",
    description: "Delivered critical solutions for the Bankway multi-function banking application, resolving complex client issues and enhancing system capabilities. Revolutionized data visualization through the redesign of 15 key widgets, improving user experience and operational efficiency. Developed internal tools that streamlined release management, cutting deployment time by 50%."
  }
];

const skills = [
  { 
    category: "Leadership & Strategy", 
    items: ["Product Strategy", "Technical Leadership", "Team Management", "Client Solutions Architecture", "Strategic Consulting"] 
  },
  { 
    category: "Domain Expertise", 
    items: ["Embedded Finance", "Banking-as-a-Service", "API Design", "Financial Technology", "Enterprise Architecture"] 
  },
  { 
    category: "Technical Excellence", 
    items: ["Java", "Python", "SQL", ".Net", "Spring Boot", "React.js", "Kubernetes", "Kafka", "DevOps"] 
  }
];

const education = [
  {
    institution: "University of Central Florida",
    degree: "Bachelor of Science in Computer Engineering",
    period: "2011 - 2015",
    details: "3.49 Major GPA"
  }
];
---

<Layout title={title} description={description}>
  <div class="container mx-auto px-4 md:px-8 py-16">
    <!-- Hero section -->
    <div class="max-w-4xl mx-auto mb-16">
      <h1 class="text-3xl md:text-4xl font-heading font-bold mb-6 text-midnight-900 dark:text-white">
        About Me
      </h1>
      
      <div class="flex flex-col md:flex-row gap-8 items-start">
        <div class="md:w-1/3">
          <div class="bg-midnight-100 dark:bg-midnight-800 rounded-lg overflow-hidden mb-4">
            <img 
              src="/src/assets/images/profile.jpg" 
              alt="Alex Power" 
              class="w-full h-auto"
            />
          </div>
          <div class="flex justify-center gap-4">
            <a 
              href="https://github.com/alex-power" 
              target="_blank" 
              rel="noopener noreferrer" 
              class="inline-flex items-center justify-center w-10 h-10 bg-midnight-900 text-white dark:bg-white dark:text-midnight-900 rounded-full hover:bg-midnight-800 dark:hover:bg-midnight-100 transition-colors"
              aria-label="GitHub Profile"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
            </a>
            <a 
              href="https://www.linkedin.com/in/alex-power-a8963291/" 
              target="_blank" 
              rel="noopener noreferrer" 
              class="inline-flex items-center justify-center w-10 h-10 bg-midnight-100 text-midnight-900 dark:bg-midnight-800 dark:text-white rounded-full border border-midnight-200 dark:border-midnight-700 hover:bg-midnight-200 dark:hover:bg-midnight-700 transition-colors"
              aria-label="LinkedIn Profile"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
            </a>
          </div>
        </div>
        
        <div class="md:w-2/3">
          <p class="text-xl text-midnight-800 dark:text-midnight-200 mb-6">
            Hi, I'm Alex Power, a technology leader and strategic consultant specializing in embedded finance and enterprise solutions.
          </p>
          
          <p class="text-midnight-700 dark:text-midnight-300 mb-4">
            With over 9 years of experience spanning technology leadership, product strategy, and client solutions architecture, I help organizations transform their business through innovative technology solutions. My expertise combines deep technical knowledge with strategic business acumen, enabling me to deliver impactful results across complex enterprise environments.
          </p>
          
          <p class="text-midnight-700 dark:text-midnight-300 mb-6">
            I specialize in architecting and implementing embedded finance solutions that drive business growth while maintaining the highest standards of security and compliance. My approach combines technical excellence with strategic thinking, enabling me to bridge the gap between business objectives and technical implementation. I'm passionate about building high-performing teams and delivering solutions that create lasting value for clients.
          </p>
        </div>
      </div>
    </div>
    
    <!-- Experience section -->
    <section class="max-w-4xl mx-auto mb-16">
      <h2 class="text-2xl font-heading font-bold mb-8 text-midnight-900 dark:text-white">
        Work Experience
      </h2>
      
      <div class="space-y-8">
        {experiences.map((exp) => (
          <div class="bg-white dark:bg-midnight-800 rounded-lg p-6 border border-midnight-100 dark:border-midnight-700 shadow-sm">
            <div class="flex flex-wrap justify-between items-start mb-2">
              <h3 class="text-xl font-heading font-bold text-midnight-900 dark:text-white">
                {exp.role}
              </h3>
              <span class="text-sm text-midnight-500 dark:text-midnight-400">
                {exp.period}
              </span>
            </div>
            <div class="text-coral-500 dark:text-coral-400 font-medium mb-4">
              {exp.company}
            </div>
            <p class="text-midnight-700 dark:text-midnight-300">
              {exp.description}
            </p>
          </div>
        ))}
      </div>
    </section>
    
    <!-- Skills section -->
    <section class="max-w-4xl mx-auto mb-16">
      <h2 class="text-2xl font-heading font-bold mb-8 text-midnight-900 dark:text-white">
        Skills & Expertise
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {skills.map((skill) => (
          <div class="bg-white dark:bg-midnight-800 rounded-lg p-6 border border-midnight-100 dark:border-midnight-700 shadow-sm">
            <h3 class="text-xl font-heading font-bold mb-4 text-midnight-900 dark:text-white">
              {skill.category}
            </h3>
            <ul class="space-y-2">
              {skill.items.map((item) => (
                <li class="flex items-center text-midnight-700 dark:text-midnight-300">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-coral-500 dark:text-coral-400 mr-2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  {item}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </section>
    
    <!-- Education section -->
    <section class="max-w-4xl mx-auto">
      <h2 class="text-2xl font-heading font-bold mb-8 text-midnight-900 dark:text-white">
        Education
      </h2>
      
      <div class="space-y-6">
        {education.map((edu) => (
          <div class="bg-white dark:bg-midnight-800 rounded-lg p-6 border border-midnight-100 dark:border-midnight-700 shadow-sm">
            <div class="flex flex-wrap justify-between items-start">
              <h3 class="text-xl font-heading font-bold text-midnight-900 dark:text-white">
                {edu.degree}
              </h3>
              <span class="text-sm text-midnight-500 dark:text-midnight-400">
                {edu.period}
              </span>
            </div>
            <div class="text-coral-500 dark:text-coral-400 font-medium">
              {edu.institution}
            </div>
          </div>
        ))}
      </div>
    </section>
  </div>
</Layout>