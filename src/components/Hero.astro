<section class="relative pt-16 pb-8 md:pt-24 md:pb-16 overflow-hidden">
  <!-- Background gradient -->
  <div class="absolute inset-0 bg-gradient-to-b from-midnight-50 to-white dark:from-midnight-900 dark:to-midnight-800 -z-10"></div>
  
  <!-- Decorative elements -->
  <div class="absolute top-0 left-0 w-full h-full overflow-hidden -z-10">
    <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-blue-400/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-1/4 right-1/4 w-64 h-64 bg-midnight-500/10 rounded-full blur-3xl"></div>
  </div>

  <div class="container mx-auto px-4 md:px-8">
    <div class="max-w-3xl mx-auto text-center">
      <div class="inline-block mb-4 px-4 py-2 bg-midnight-100 dark:bg-midnight-800 rounded-full text-midnight-700 dark:text-midnight-200 text-sm font-medium animate-fade-in">
        Technology Leader & Strategic Consultant
      </div>
      
      <h1 class="text-4xl md:text-6xl font-heading font-bold mb-6 text-midnight-900 dark:text-white">
        <span class="bg-gradient-to-r from-blue-400 to-emerald-400 bg-clip-text text-transparent">Alex Power</span>
      </h1>
      
      <p class="text-xl md:text-2xl text-midnight-700 dark:text-midnight-300 mb-8 max-w-2xl mx-auto">
        I help organizations transform their business through innovative <span class="font-medium text-midnight-900 dark:text-white">embedded finance</span> and <span class="font-medium text-midnight-900 dark:text-white">enterprise solutions</span>.
      </p>
      
      <div class="flex flex-wrap justify-center gap-4 animate-slide-up" style="animation-delay: 200ms;">
        <a 
          href="/about" 
          class="group px-6 py-3 bg-midnight-900 text-white dark:bg-white dark:text-midnight-900 rounded-md hover:bg-blue-400 dark:hover:bg-blue-400 hover:text-white transition-all duration-300 transform hover:-translate-y-0.5"
        >
          About Me
          <span class="inline-block transition-transform duration-300 group-hover:translate-x-1">→</span>
        </a>
        <a 
          href="/blog" 
          class="group px-6 py-3 bg-white text-midnight-900 dark:bg-midnight-800 dark:text-white border border-midnight-200 dark:border-midnight-700 rounded-md hover:bg-midnight-50 dark:hover:bg-midnight-700 transition-all duration-300 transform hover:-translate-y-0.5"
        >
          Read Blog
          <span class="inline-block transition-transform duration-300 group-hover:translate-x-1">→</span>
        </a>
      </div>
    </div>
  </div>
</section>