<section class="py-16 relative overflow-hidden">
  <!-- Background gradient -->
  <div class="absolute inset-0 bg-gradient-to-b from-white to-midnight-50 dark:from-midnight-800 dark:to-midnight-900 -z-10"></div>
  
  <!-- Decorative elements -->
  <div class="absolute top-0 left-0 w-full h-full overflow-hidden -z-10">
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-blue-400/5 rounded-full blur-3xl"></div>
  </div>

  <div class="container mx-auto px-4 md:px-8">
    <div class="max-w-3xl mx-auto text-center">
      <div class="inline-block mb-4 px-4 py-2 bg-blue-400/10 dark:bg-blue-400/20 rounded-full text-blue-400 dark:text-blue-300 text-sm font-medium">
        Let's Connect
      </div>
      
      <h2 class="text-3xl md:text-4xl font-heading font-bold mb-6 text-midnight-900 dark:text-white">
        <span class="bg-gradient-to-r from-blue-400 to-emerald-400 bg-clip-text text-transparent">Ready to Transform Your Business?</span>
      </h2>
      
      <p class="text-midnight-700 dark:text-midnight-200 mb-8 leading-relaxed">
        Have a project idea or just want to chat? I'm always open to discussing new opportunities and collaborations in embedded finance and enterprise solutions.
      </p>
      
      <div class="flex flex-wrap justify-center gap-4">
        <a 
          href="/contact" 
          class="group inline-flex items-center justify-center px-6 py-3 bg-gradient-to-r from-blue-400 to-emerald-400 text-white rounded-md hover:from-blue-500 hover:to-emerald-500 transition-all duration-300 transform hover:-translate-y-0.5"
        >
          Get in Touch
          <span class="inline-block transition-transform duration-300 group-hover:translate-x-1 ml-2">→</span>
        </a>
        
        <a 
          href="https://www.linkedin.com/in/alex-power-a8963291/" 
          target="_blank" 
          rel="noopener noreferrer" 
          class="group px-8 py-4 bg-white text-midnight-900 dark:bg-midnight-800 dark:text-white border border-midnight-200 dark:border-midnight-700 rounded-md hover:bg-midnight-50 dark:hover:bg-midnight-700 transition-all duration-300 transform hover:-translate-y-0.5 hover:shadow-lg"
        >
          Connect on LinkedIn
          <span class="inline-block transition-transform duration-300 group-hover:translate-x-1">→</span>
        </a>
      </div>
    </div>
  </div>
</section>